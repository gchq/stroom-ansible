  STROOM_STATS_DB_USERNAME:  "{{ db_stats_user }}"
  STROOM_AUTH_DB_NAME:  "{{ db_auth }}"
  STROOM_AUTH_DB_PASSWORD:  "{{ db_auth_password }}"
